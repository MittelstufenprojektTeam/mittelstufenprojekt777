<div class="text-center h1 d-flex justify-content-center align-items-center">
    <div class="w-75">
        {{ question.phrase }}
    </div>
</div>

<div class="mt-5 d-flex flex-column justify-content-center align-items-center">
    {% for key, option in question.options %}
        <label
                class="form-check-label w-50"
                style="font-size: 1.2em"
                for="option{{ key }}"
        >
            <div
                    class="shadow-sm p-2 mb-3 bg-white"
                    style="border-radius: 25px"
            >
                <div class="form-check form-check-inline">
                    <input
                            class="form-check-input"
                            type="checkbox"
                            id="option{{ key }}"
                            name="options[{{ option.text }}]">
                    {{ option.text }}
                </div>
            </div>
        </label>
    {% endfor %}
</div>
