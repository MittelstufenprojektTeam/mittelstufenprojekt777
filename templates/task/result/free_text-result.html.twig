<div class="d-flex align-items-center justify-content-center flex-column mt-5">
    <h1>{% trans %}answer.our{% endtrans %}</h1>
    <div
            class="mt-2"
            style="font-size: 1.2em"
    >
        {{ params.answer }}
    </div>

</div>
<div class="d-flex align-items-center justify-content-center flex-column mt-5">
    <h2>{% trans %}answer.your{% endtrans %}</h2>
    <div
            class="mt-2"
            style="font-size: 1.2em"
    >
        {{ params.userAnswer }}
    </div>
</div>

<form method="post" action="{{ path('task_free_text_result_self_rating', {questionId: 1}) }}" class="mt-5">
    <div class="d-flex align-items-center justify-content-center flex-row">
        <label style="font-size: 1.2em" class="m-2 form-check-label">
            <input class="form-check-input" type="radio" name="correctAnswered" value="1">
            {% trans %}answer.answered.correct{% endtrans %}
        </label>
        <label style="font-size: 1.2em" class="m-2 form-check-label">
            <input class="form-check-input" type="radio" name="correctAnswered" value="0">
            {% trans %}answer.answered.wrong{% endtrans %}
        </label><br>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <button class="btn-lg btn-primary" type="submit">{% trans %}button.submit{% endtrans %}</button>
    </div>
</form>